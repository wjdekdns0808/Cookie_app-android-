<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정 이름"
            android:textSize="18sp"
            android:id="@+id/username_review"/>

        <RatingBar
            android:id="@+id/userrating_review"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_review"
            android:layout_marginTop="5dp"
            android:numStars="5"/>

        <TextView
            android:id="@+id/date_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/userrating_review"
            android:layout_alignBottom="@id/userrating_review"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/review_textview"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="리뷰 내용"
        android:textSize="15sp"
        android:id="@+id/user_review"/>

</LinearLayout>